<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IndustrialControlMAUI.Controls.PasswordEntryView"
             x:Name="Root">
    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
        <Entry Grid.Column="0"
               Placeholder="{Binding Placeholder, Source={x:Reference Root}}"
               Text="{Binding Text, Source={x:Reference Root}}"
               IsPassword="True"
               ReturnType="Done">
            <Entry.Triggers>
                <DataTrigger TargetType="Entry"
                             Binding="{Binding ShowPassword, Source={x:Reference Root}}" Value="True">
                    <Setter Property="IsPassword" Value="False"/>
                </DataTrigger>
            </Entry.Triggers>
        </Entry>

        <ImageButton Grid.Column="1"
                     Padding="8"
                     WidthRequest="44" HeightRequest="44"
                     BackgroundColor="Transparent"
                     Command="{Binding TogglePasswordCommand, Source={x:Reference Root}}">
            <ImageButton.Source>
                <FontImageSource Glyph="&#xf070;" FontFamily="FA" Size="18" />
            </ImageButton.Source>
            <ImageButton.Triggers>
                <DataTrigger TargetType="ImageButton"
                             Binding="{Binding ShowPassword, Source={x:Reference Root}}" Value="True">
                    <Setter Property="Source">
                        <Setter.Value>
                            <FontImageSource Glyph="&#xf06e;" FontFamily="FA" Size="18" />
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </ImageButton.Triggers>
        </ImageButton>
    </Grid>
</ContentView>
